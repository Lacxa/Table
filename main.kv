#:import sm kivy.uix.screenmanager
MDScreen:
    MDNavigationLayout:
        ScreenManager:
            id:manager
            transition:sm.FadeTransition(duration=.0)
            MDScreen:
                name:"home"
                MDTopAppBar:
                    title: "Dashboard"
                    elevation: 1
                    pos_hint: {"top": 1}
                    md_bg_color: "#ABBEC4"
                    specific_text_color: "#4a4939"

                MD3Card:
                    pos_hint:{"center_x":.2,"center_y":.7}
                    FloatLayout:
                        MDLabel:
                            text:"General"
                            halign:"center"
                            font_style:"H4"
                            color:"#4a4939"
                            pos_hint:{"center_x":.2,"center_y":.8}
                        MDIcon:
                            icon:"calendar-multiselect"
                            halign:"center"
                            font_size:"160sp"
                            color:"#626A68"
                            pos_hint:{"center_x":.3,"center_y":.35}
                MD3Card:
                    pos_hint:{"center_x":.5,"center_y":.7}
                    FloatLayout:
                        MDLabel:
                            text:"Test"
                            halign:"center"
                            font_style:"H4"
                            color:"#4a4939"
                            pos_hint:{"center_x":.2,"center_y":.8}
                        MDIcon:
                            icon:"calendar-week"
                            halign:"center"
                            font_size:"160sp"
                            color:"#626A68"
                            pos_hint:{"center_x":.3,"center_y":.35}
                MD3Card:
                    pos_hint:{"center_x":.8,"center_y":.7}
                    FloatLayout:
                        MDLabel:
                            text:"Ue"
                            halign:"center"
                            font_style:"H4"
                            color:"#4a4939"
                            pos_hint:{"center_x":.2,"center_y":.8}
                        MDIcon:
                            icon:"calendar-month"
                            halign:"center"
                            font_size:"160sp"
                            color:"#626A68"
                            pos_hint:{"center_x":.3,"center_y":.35}

            MDScreen:
                name:"program"
                FloatLayout:
                    Deco:
                    MDLabel:
                        text:"Programme"
                        halign:"center"
                        font_style:"H4"
                        color:"#4a4939"
                        pos_hint:{"center_x":.09,"center_y":.94}
                    SearchCard:
                        FloatLayout:
                            MDLabel:
                                text:"Search Programme"
                                halign:"center"
                                color:"#4a4939"
                                pos_hint:{"center_x":.5,"center_y":.5}
                            MDIcon:
                                icon:"magnify"
                                pos_hint:{"center_x":.1,"center_y":.5}
                    MD3Card:
                        pos_hint:{"center_x":.25,"center_y":.6}
                        on_release:
                            app.screen_capture("all_programmes")
							app.display_programmes()
                        FloatLayout:
                            MDLabel:
                                text:"All Programmes"
                                halign:"center"
                                font_style:"H4"
                                color:"#4a4939"
                                pos_hint:{"center_x":.4,"center_y":.83}
                            MDIcon:
                                icon:"list-box-outline"
                                halign:"center"
                                font_size:"160sp"
                                color:"#626A68"
                                pos_hint:{"center_x":.3,"center_y":.4}
                            MDLabel:
                                text:app.all_programmes_count
                                halign:"center"
                                font_size:"70dp"
                                color:"gray"
                                pos_hint:{"center_x":.8,"center_y":.3}
                    MD3Card:
                        pos_hint:{"center_x":.7,"center_y":.6}
                        FloatLayout:
                            MDLabel:
                                text:"Add Programme"
                                halign:"center"
                                font_style:"H4"
                                color:"#4a4939"
                                pos_hint:{"center_x":.4,"center_y":.83}
                            MDIcon:
                                icon:"plus-circle-outline"
                                halign:"center"
                                font_size:"180sp"
                                color:"#626A68"
                                pos_hint:{"center_x":.3,"center_y":.35}
            MDScreen:
                name:"all_programmes"
                FloatLayout:
                    Image:
                        source:app.nodata
                        pos_hint:{"center_x":.5,"center_y":.5}
                    MDLabel:
                        text:"All Programme"
                        halign:"center"
                        font_style:"H4"
                        color:"#4a4939"
                        pos_hint:{"center_x":.09,"center_y":.94}
                    MDTextField:
                        hint_text: "search programme"
                        mode: "round"
                        helper_text: "Search Programme"
                        line_color_focus: "#ABBEC4"
                        icon_left_color_normal: "#ABBEC4"
                        size_hint: .2, .05
                        font_size: dp(25)
                        height: "90dp"
                        icon_left: "magnify"
                        pos_hint:{"center_x":.87,"center_y":.93}
                        on_text:
                            print(self.text)
                            app.search_live(self.text)
                    MDSeparator:
                        pos_hint:{"center_x":.5,"center_y":.85}
                    RecycleView:
		                id:programs
		                key_viewclass: 'viewclass'
		                key_size: 'height'
		                pos_hint:{"center_x":.5,"top":.8}
		                RecycleGridLayout:
		                    id:wall
		                    cols:4
		                    spacing:dp(10)
		                    padding: dp(10)
		                    default_size: None, dp(40)
		                    default_size_hint: 1, None
		                    size_hint_y: None
		                    height: self.minimum_height
		                    #orientation: 'vertical'
			MDScreen:
                name:"specific_programmes"
                FloatLayout:
                    MDLabel:
                        text:app.specific_programme
                        halign:"center"
                        font_style:"H3"
                        halign:"left"
                        color:"#0c6c4d"
                        pos_hint:{"center_x":.55,"center_y":.92}
                    MDSeparator:
                        pos_hint:{"center_x":.5,"center_y":.85}
                    MDLabel:
                        text:"Student Size:" + " " + app.programme_size
                        halign:"center"
                        halign:"left"
                        font_size:dp("30")
                        color:"#626A68"
                        pos_hint:{"center_x":1.2,"center_y":.93}
                    MDLabel:
                        text:"Module Number:"+ " " + app.modules_count
                        halign:"center"
                        font_size:dp("29")
                        halign:"left"
                        color:"#626A68"
                        pos_hint:{"center_x":1.2,"center_y":.89}
                    MD3Card:
	                    pos_hint:{"center_x":.2,"center_y":.7}
	                    on_release:
	                        app.display_module()
	                        app.add_module = 9
	                        app.view_module = .2
	                    FloatLayout:
	                        MDLabel:
	                            text:"View Modules"
	                            halign:"center"
	                            font_style:"H4"
	                            color:"#4a4939"
	                            pos_hint:{"center_x":.4,"center_y":.83}
	                        MDIcon:
	                            icon:"format-list-bulleted"
	                            halign:"center"
	                            font_size:"160sp"
	                            color:"#626A68"
	                            pos_hint:{"center_x":.3,"center_y":.35}
	                MD3Card:
	                    pos_hint:{"center_x":.5,"center_y":.7}
	                    on_release:
	                        app.add_module = .5
	                        app.view_module = 9
	                    FloatLayout:
	                        MDLabel:
	                            text:"Add module"
	                            halign:"center"
	                            font_style:"H4"
	                            color:"#4a4939"
	                            pos_hint:{"center_x":.4,"center_y":.83}
	                        MDIcon:
	                            icon:"playlist-plus"
	                            halign:"center"
	                            font_size:"160sp"
	                            color:"#626A68"
	                            pos_hint:{"center_x":.3,"center_y":.35}
	                MD3Card:
	                    pos_hint:{"center_x":.8,"center_y":.7}
	                    FloatLayout:
	                        MDLabel:
	                            text:"View TimeTable"
	                            halign:"center"
	                            font_style:"H4"
	                            color:"#4a4939"
	                            pos_hint:{"center_x":.4,"center_y":.83}
	                        MDIcon:
	                            icon:"calendar-month"
	                            halign:"center"
	                            font_size:"160sp"
	                            color:"#626A68"
	                            pos_hint:{"center_x":.3,"center_y":.35}
                    MDSeparator:
                        pos_hint:{"center_x":.5,"center_y":.5}
                    FloatLayout:
                        id:below_box
                        pos_hint:{"center_x":.5,"center_y":.45}
                        AddForm:
                            radius:50
                            pos_hint:{"center_x":app.add_module,"center_y":.3}
                        MDBoxLayout:
                            md_bg_color:"#ABBEC4"
                            pos_hint:{"center_x":app.view_module,"center_y":.3}
                            radius:25
                            size_hint:None, None
                            size:"550dp", "500dp"
                            orientation:"vertical"
                            FloatLayout:
                                MDLabel:
								    text:"Modules"
								    halign:"center"
								    font_size:dp("30")
								    color:"#626A68"
								    pos_hint:{"center_x":.5,"center_y":.9}
								RecycleView:
					                id:modules
					                key_viewclass: 'viewclass'
					                key_size: 'height'
					                pos_hint:{"center_x":.48,"top":.8}
					                RecycleBoxLayout:
					                    id:wall
					                    #cols:4
					                    spacing:dp(10)
					                    padding: dp(10)
					                    default_size: None, dp(40)
					                    default_size_hint: 1, None
					                    size_hint_y: None
					                    height: self.minimum_height
					                    orientation:"vertical"


        MDNavigationDrawer:
            id: nav_drawer
            radius: (0, 0, 0, 0)
            type: "standard"
            md_bg_color:"#88A2AA"

            MDNavigationDrawerMenu:

                MDNavigationDrawerHeader:
                    title: "Time Table"
                    title_color: "#4a4939"
                    text: "Select Category"
                    spacing: "4dp"
                    padding: "12dp", 0, 0, "56dp"

                MDNavigationDrawerLabel:
                    text: "Category"

                DrawerClickableItem:
                    icon: "view-dashboard"
                    #right_text: "+99"
                    text_right_color: "#4a4939"
                    text: "Dashboard"
                    on_release:
                        app.screen_capture("home")

                DrawerClickableItem:
                    icon: "list-box-outline"
                    text_right_color: "#4a4939"
                    text: "Programme"
                    on_release:
                        app.screen_capture("program")
                        app.load_all_programmes()

                DrawerClickableItem:
                    icon: "account"
                    text_right_color: "#4a4939"
                    text: "Teacher"

                DrawerClickableItem:
                    icon: "timetable"
                    text_right_color: "#4a4939"
                    text: "Timetable"

<ProCard@MDCard>:
    #orientation: "vertical"
    md_bg_color: "#ABBEC4"
    pos_hint:{"center_x":.5,"center_y":.3}
    padding: "10dp"
    #spacing: "5dp"
    border_radius: 3
    border_color_a: .5
    border_color_a: 1
    adaptive_height:True
    radius: [3]
    size_hint: None, None
    size: app.size_x/1.5, app.size_y/11
    focus_behavior: False
    ripple_color:.9, .9, .95, 1
    ripple_behavior: True
    name:""
    on_release:
        print(root.name)
        app.specific_programme = root.name
        app.screen_capture("specific_programmes")
        app.load_module(root.name)
        app.add_module = 9
        app.view_module = 9
    FloatLayout:
        MDIcon:
            icon:"list-box-outline"
            font_size:"30sp"
            theme_text_color:"Custom"
            text_color: "#626A68"
            pos_hint:{"center_x":.08,"center_y":.5}
        MDLabel:
            text:root.name
            font_size:"20sp"
            halign:"left"
            pos_hint:{"center_x":.65,"center_y":.5}


<MD3Card@MDCard>:
    md_bg_color: "#ABBEC4"
    padding: 4
    size_hint: None, None
    radius: ("30sp")
    size: "400dp", "250dp"
    ripple_behavior: True
    focus_behavior:True
    unfocus_color: "#ABBEC4"
    focus_color: "#94ACB3"
    ripple_color:.9, .9, .95, 1

<Deco@MDCard>:
    orientation: "vertical"
    md_bg_color: "#e7e4c0"
    padding: "10dp"
    #spacing: "5dp"
    border_radius: 3
    border_color_a: .5
    radius: [9]
    size_hint: None, None
    size: app.size_x/1, app.size_y/2.5
    focus_behavior: False
    ripple_behavior: False
    pos_hint:{"center_x":.5,"center_y":1.02}

<SearchCard@MDCard>:
    orientation: "vertical"
    md_bg_color: "#88A2AA"
    padding: "10dp"
    #spacing: "5dp"
    border_radius: 3
    border_color_a: .5
    radius: [30]
    size_hint: None, None
    size: "340dp", "50dp"
    focus_behavior: False
    ripple_behavior: True
    pos_hint:{"center_x":.87,"center_y":.93}

<AddForm@MDBoxLayout>:
	md_bg_color:"#ABBEC4"
	#adaptive_height:True
	size_hint:None, None
    size:"500dp", "500dp"
    #adaptive_width:True
    orientation:"vertical"
    FloatLayout:
	    MDLabel:
		    text:"Add module"
		    halign:"center"
		    font_size:dp("30")
		    color:"#626A68"
		    pos_hint:{"center_x":.5,"center_y":.9}
		MDTextField:
		    mode: "rectangle"
		    fill_color: 0, 0, 0, .4
		    size_hint: .8, None
		    hint_text:"Module Name"
		    #pos_hint:{'center_x':.5, 'center_y':.73}
		    text_color: 0, 0, 0, 1
		    font_size: dp(25)
		    pos_hint:{"center_x":.5, "center_y":.75}
	    MDTextField:
		    mode: "rectangle"
		    fill_color: 0, 0, 0, .4
		    size_hint: .8, None
		    hint_text:"Module Code"
		    #pos_hint:{'center_x':.5, 'center_y':.73}
		    text_color: 0, 0, 0, 1
		    font_size: dp(25)
		    pos_hint:{"center_x":.5, "center_y":.55}
	    MDRaisedButton:
	        id:l
	        text: "Submit"
	        md_bg_color:"#626A68"
	        size_hint: .4, .09
	        pos_hint:{'center_x':.7, 'center_y':.33}



<DrawerClickableItem@MDNavigationDrawerItem>
    focus_color: "#e7e4c0"
    unfocus_color:"#88A2AA"
    text_color: "#4a4939"
    icon_color: "#4a4939"
    ripple_color: "#c5bdd2"
    selected_color: "#0c6c4d"


<DrawerLabelItem@MDNavigationDrawerItem>
    text_color: "#4a4939"
    icon_color: "#4a4939"
    focus_behavior: False
    selected_color: "#4a4939"
    _no_ripple_effect: True
